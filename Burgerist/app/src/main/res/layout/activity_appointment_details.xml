<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0085CD"
    tools:context="com.example.bretz.burgerist.AppointmentDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Detalles de Cita"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtUserApptDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:text="Nombre Usuario"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/txtContractApptDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtUserApptDetail"
        android:layout_alignBottom="@+id/txtUserApptDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="Numero de Contrato"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/txtApptDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtUserApptDetail"
        android:layout_below="@+id/txtUserApptDetail"
        android:layout_marginTop="34dp"
        android:text="Cita"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtApptDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtApptDet"
        android:layout_below="@+id/txtApptDet"
        android:layout_marginTop="24dp"
        android:text="DETALLES DE LA CITA"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtApptDet"
        android:backgroundTint="@android:color/holo_green_dark"
        app:srcCompat="?android:attr/listDivider" />

</RelativeLayout>
