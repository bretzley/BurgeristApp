<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false"
    android:background="#0085CD"
    tools:context="com.example.bretz.burgerist.AppointmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleAppt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="PrÃ³ximas Citas"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentEnd="false"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="Date"
            android:textColor="@android:color/background_light" />

        <ListView
            android:id="@+id/lstAppts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnBookAppt"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNombreCitas" />
    </LinearLayout>

</RelativeLayout>
