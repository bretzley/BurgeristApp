<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0085CD"
    tools:context="com.example.bretz.burgerist.UserLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/edtNumberLogin"
        android:layout_toStartOf="@+id/edtNumberLogin"
        app:srcCompat="@android:drawable/ic_dialog_email"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="209dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="53dp"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="271dp"
        android:layout_alignBottom="@+id/edtPasswordLogin"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:id="@+id/btnUserLogin"
        android:layout_width="253dp"
        android:layout_height="55dp"
        android:background="@android:color/holo_green_dark"
        android:text="Inicia sesión"
        tools:layout_editor_absoluteX="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="61dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPasswordLogin"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtNumberLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/edtPasswordLogin"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Numero de Contrato"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/edtPasswordLogin"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeLogin"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edtPasswordLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnUserLogin"
        android:layout_alignStart="@+id/btnUserLogin"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="112dp"
        android:layout_height="95dp"
        app:srcCompat="@android:drawable/btn_star"
        tools:layout_editor_absoluteX="136dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/txtWelcomeLogin"
        android:layout_below="@+id/txtWelcomeLogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtWelcomeLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido "
        android:textSize="24sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginTop="24dp" />
</RelativeLayout>
