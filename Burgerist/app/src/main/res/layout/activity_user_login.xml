<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0085CD"
    tools:context="com.example.bretz.burgerist.UserLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="42dp"
        app:srcCompat="@android:drawable/ic_dialog_email"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="209dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="53dp"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/btnUserLogin"
        android:layout_width="253dp"
        android:layout_height="55dp"
        android:background="@android:color/holo_green_dark"
        android:text="Inicia sesión"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="388dp" />

    <EditText
        android:id="@+id/edtLoginUser"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ingresa tu usuario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/edtLoginUserPass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="112dp"
        android:layout_height="95dp"
        app:srcCompat="@android:drawable/btn_star"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="136dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido cliente distinguido"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="111dp" />
</android.support.constraint.ConstraintLayout>
